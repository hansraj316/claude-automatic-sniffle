# Research Hub Environment Variables
# Copy this file to .env and fill in your values

# Claude API Key (required)
ANTHROPIC_API_KEY=YOUR_API_KEY_HERE

# GitHub Token (optional, for GitHub MCP server)
GITHUB_TOKEN=your_github_token_here

# Database Configuration
DATABASE_PATH=./knowledge_base/research_hub.db

# Frontend Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# MCP Server Configuration
MCP_FILESYSTEM_PATH=./knowledge_base
MCP_LOG_LEVEL=INFO

# Model Configuration
DEFAULT_MODEL=claude-sonnet-4-5-20250929
FALLBACK_MODEL=claude-opus-4-20250514

# Performance Settings
MAX_CONCURRENT_AGENTS=5
REQUEST_TIMEOUT=300
RETRY_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/research_hub.log
